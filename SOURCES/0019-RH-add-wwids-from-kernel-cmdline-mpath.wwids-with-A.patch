diff --git a/multipathd/multipathd.service b/multipathd/multipathd.service
index 6d57c7e8..dfc1e962 100644
--- a/multipathd/multipathd.service
+++ b/multipathd/multipathd.service
@@ -16,6 +16,7 @@ Type=notify
